<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      
    </div>
    <div class="col-8">
      <h2>Instagram Home page</h2>
      <% @page_posts.data.each do |post|%>
        <div class="card mt-2">
          <div class="card-header">
          </div>
          <div class="card-body">
            <h5 class="card-title"> <%= post.caption.text unless post.caption.nil? %></h5>
            <img src="<%= post.images.low_resolution.url %>" width="320" height="320">
            <a href="#" class="btn btn-primary default-color">view</a>
          </div>
        </div>
       <%end %>  
    </div>
    <div class="col-2">
      
    </div>
  </div>
</div>